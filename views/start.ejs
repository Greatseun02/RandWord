<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Random Word</title>
    <link rel="icon"  type="image/x-icon" href="./images/favicon.ico">
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Kanit&display=swap" rel="stylesheet">
  
    <link rel="stylesheet" href="./bootstrap/css/bootstrap.min.css">
</head>
<body class="container">
    

    <div class="title">

        <img src="./images/sand-clock.png" alt="Icon" width="64px">
        <h1>RandWord</h1>

</div>


    
    <div id="popup-container" style="display: none;">
        <div id="popup-content">
          <p>Your word for the day is: <%=word.word%> </p>
          <%word.definitions.forEach(function(wordType){%>
           <p>Part of Speech: <%=wordType.partOfSpeech%></p> 
           <p>Definition: <%=wordType.text%></p>
           <%})%>
          <p class="wordOfDayTranscription">Transcription: </p>
          <button id="close-btn">Close</button>
        </div>
      </div>
      <button id="popup-btn" class="wordClick" onclick="popup()">Word of the Day!ü§©</button>



      <div id="search">
        <form action="/search" method="post">
          <label for="Search">Search for a new word:</label>
          <input name="search" type="text" placeholder="e.g 'Obscure'">
          <button type="submit">Submit</button>
        </form>
      </div>

